<div class="ui segment" style="max-width: 400px; margin: 0px 60px;">
  <h1>Transaction Info</h1>
  <div class="ui divider"></div>
  Shop: <%= @shop.shop_name %> <br>
  Date sent: <%= @transaction.date_sent.in_time_zone("Singapore") %> <br>
  Number of pages: <%= @transaction.number_pages %> <br>
  Number of copies: <%= @transaction.number_copies %> <br>
  Paper size: <%= @transaction.paper_size %> <br>
  Color settings: <%= @transaction.color_settings %> <br>
  Additional specs: <%= @transaction.additional_specs %> <br>
  File: <%= link_to @transaction.file_file_name + " (click to download)", download_path(@shop.id, @transaction.id) %> <br>
  <div class="ui divider"></div>

  Price: <%= "#{'%.02f' % @price_per_page}" %> * <%= @transaction.number_pages %> * <%= @transaction.number_copies %> = <b><%= "#{'%.02f' % (@transaction.price)}" %></b><br>
  <% if @transaction.date_downloaded.nil? %>
    Not yet downloaded
  <% else %>
    Date downloaded: <%= @transaction.date_downloaded.in_time_zone("Singapore") %>
  <% end %> <br>
  <% if @transaction.date_printed.nil? %>
    Not yet printed
  <% else %>
    Date printed: <%= @transaction.date_printed.in_time_zone("Singapore") %>
  <% end %> <br>
  <% if @transaction.date_paid.nil? %>
    Not yet paid
  <% else %>
    Date paid: <%= @transaction.date_paid.in_time_zone("Singapore") %>
  <% end %> <br>
</div>
