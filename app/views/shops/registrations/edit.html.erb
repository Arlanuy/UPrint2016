<div class = " " style="margin: 0 auto;">
    <div class="ui green raised segment container">
        <%= form_for(current_shop, as: :shop, url: registration_path(:shop), html: { method: :patch, class: "ui form" }) do |f| %>
            <h1 class = "">Shop Settings</h1>
            <%= devise_error_messages! %>
            <div class = "field" >
                <label> Name </label>
                <%= f.text_field :shop_name, placeholder: "Shop name" %>
                </br>
                </br>
                <label> Address</label>
                <%= f.text_field :location, placeholder: "Shop location" %>
                </br>
                </br>
                <label> Contact Number</label>
                <%= f.text_field :contact_number, placeholder: "Contact details" %>
                </br>
                </br>
                <label> Email </label>
                <%= f.text_field :email, placeholder: "Shop email" %>
                </br>
                </br>
                <label>Pricing</label>
                <div class="fields">
                <div class="four wide field"><label>Black and White: </label><%= f.number_field :price_blwt, step: '0.05' %></div>
                <div class="four wide field"><label>Greyscale: </label><%= f.number_field :price_grey, step: '0.05' %></div>
                <div class="four wide field"><label>Colored: </label><%= f.number_field :price_colr, step: '0.05' %></div>
                </div>
                </br>
                </br>
                <label> New Password </label>
                <%= f.password_field :password %>
                </br>
                </br>
                <label> Confirm New Password </label>
                <%= f.password_field :password_confirmation %>
                </br>
                </br>
                <%= f.submit html_options = {class: "ui green button"} %>
            </div>
        <% end %>
    </div>
</div>
