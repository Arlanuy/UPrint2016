<%= form_for(:student, url: student_registration_path, html: { class: "ui form form-padding" }) do |f| %>
    <div class="fields">
        <div class="eleven wide field">
            <label>Full name</label>
            <%= f.text_field :name, placeholder: "Juan dela Cruz" %>
        </div>
        <!--div class="six wide field">
            <label>Last Name</label>
            <input type="text" name="last_name" placeholder="Dela Cruz">
        </div-->
        <div class="five wide field">
            <label>Student Number</label>
            <%= f.text_field :student_number, placeholder: "201512345" %>
        </div>
    </div>
    <div class="fields">
        <div class="eight wide field">
            <label>UP Webmail</label>
            <%= f.text_field :email, placeholder: "UP Webmail", html: {id: "email-input-modal"} %>
        </div>
        <div class="eight wide field centered">
            <label>Contact Number</label>
            <%= f.text_field :contact_number, placeholder: "09061234567" %>
        </div>
    </div>
    <div class="fields">
        <div class="eight wide field">
            <label>Password</label>
            <%= f.password_field :password, placeholder: "Password", html: {id: "password-input-modal"} %>
        </div>
        <div class="eight wide field">
            <label>Confirm Password</label>
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password"%>
        </div>
    </div>
    <button class="ui button">Sign up</button>
<% end %>
<!-- 2 methods of displaying the error messages below.
  Second method to be improved upon. -->
<%= devise_error_messages! %>
<div class="ui red floating message"><ul>
<% @student.errors.full_messages.each do |e| %>
  <li><%= e %></li>
<% end %>
</ul></div>
