<%= form_for(@shop, url: registration_path(:shop), html: { class: "ui form form-padding" }) do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <div class="six wide field">
      <label>Shop name</label>
      <%= f.text_field :shop_name, placeholder: "Shop name" %>
    </div>
    <div class="ten wide field">
      <label>Location / Stall Number</label>
      <%= f.text_field :location, placeholder: "Location/Stall Number" %>
    </div>
  </div>
  <div class="fields">
    <div class="eight wide field">
      <label>Email</label>
      <%= f.text_field :email, placeholder: "Email" %>
    </div>
    <div class="eight wide field centered">
      <label>Contact Number</label>
      <%= f.text_field :contact_number, placeholder: "09061234567" %>
    </div>
  </div>
  <div class="fields">
    <div class="eight wide field">
      <label>Password</label>
      <%= f.password_field :password %>
    </div>
    <div class="eight wide field">
      <label>Confirm Password</label>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
    </div>
  </div>
  <button class="ui button">Sign up</button>
<% end %>
