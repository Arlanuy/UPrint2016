 <div class="ui grid" style="margin-left: auto; margin-right: auto">
  <div class="four wide column">
    <div class="ui segment">
      <h2 class="ui header">
      <%= link_to(current_student.name, edit_student_registration_path) %>
      <div class="sub header"><%= current_student.student_number %></div>
      </h2>
      <div class="ui divider"></div>
      <div class="ui list">
        <div class="item">
          <h5><i class="mail icon"></i><%= current_student.email %></h5>
        </div>
        <div class="item">
          <h5><i class="phone icon"></i><%= current_student.contact_number %></h5>
        </div>
      </div>
  </div>
</div>
<div class="eight wide column">
  <div class="ui segment padded">
    <h1 class="ui header centered">Shops</h1>
    <div class="ui divider"></div>
    <div class="ui three stackable cards">
      <% @shops.each do |shop| %>
        <%= link_to(shop, html_options={:class => "card"}) do %>
          <div class="content">
            <div class="header"><%= shop.shop_name %> <i class="tiny circle icon red"></i></div>
            <div class="ui divider"></div>
            <div class="description">Located at: <%= shop.location %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="four wide column">
  <div class="ui segment">
    <div class="ui center aligned grid padded">
      <!--h3 class="ui header">Transactions</h3-->
      <h3><%= link_to("Transactions", {:controller => "transactions", :action => "index", :id => current_student.id}, html_options={:class => "ui header"}) %></h3>
      <div class="ui relaxed divided list">
        <div class="item">
          <i class="large check circle icon"></i>
          <div class="content">
            <a class="header">Order #1234</a>
            <div class="description">
              Eng 10 Readings from <a>Shop #1234</a>. Claimed today.
            </div>
          </div>
        </div>
        <div class="item">
          <i class="large check circle outline icon"></i>
          <div class="content">
            <a class="header">Order #1234</a>
            <div class="description">
              Eng 10 Readings from <a>Shop #1234</a>. Ready to be claimed since yesterday.
            </div>
          </div>
        </div>
        <div class="item">
          <i class="large wait icon"></i>
          <div class="content">
            <a class="header">Order #1234</a>
            <div class="description">
              Eng 10 Readings from <a>Shop #1234</a>. Pending since January 21, 2016.
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
